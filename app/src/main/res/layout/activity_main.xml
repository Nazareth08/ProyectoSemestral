<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_Gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:onClick="Gps"
        android:text="@string/button_Gps"
        app:layout_constraintStart_toStartOf="@+id/button_luz"
        app:layout_constraintTop_toBottomOf="@+id/button_luz" />

    <Button
        android:id="@+id/button_luz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:onClick="SensorLuz"
        android:text="@string/button_luz"
        app:layout_constraintStart_toStartOf="@+id/button_aproximidad"
        app:layout_constraintTop_toBottomOf="@+id/button_aproximidad" />

    <Button
        android:id="@+id/button_aproximidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="88dp"
        android:onClick="SensorAproximacion"
        android:text="@string/button_aproximidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>